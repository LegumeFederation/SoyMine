<project type="bio">
  <property name="target.model" value="genomic"/>
  <property name="source.location" location="../bio/sources/"/>
  <property name="common.os.prefix" value="common"/>
  <property name="intermine.properties.file" value="soymine.properties"/>
  <property name="default.intermine.properties.file" location="../default.intermine.integrate.properties"/>

  <sources>

    <!-- chado genomics -->
    <source name="chado-genomics" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3847_Williams82"/>
      <property name="dataSetTitle" value="LIS Glycine max (3847_Williams82) data"/>
      <property name="dataSourceName" value="LIS chado database"/>
      <property name="processors" value="org.intermine.bio.dataconversion.SequenceProcessor"/>
    </source>

    <!-- IS THIS LOADING ANYTHING??? -->
    <!-- chado genetics -->
    <source name="chado-genetics" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3847_Williams82"/>
      <property name="phytozome.version" value="phytozome_10_2"/>
      <property name="dataSetTitle" value="LIS Glycine max (3847_Williams82) data"/>
      <property name="dataSourceName" value="LIS chado database"/>
      <property name="processors" value="org.intermine.bio.dataconversion.GeneticProcessor"/>
    </source>

    <!-- chado GO annotation -->
    <source name="chado-go-annotation" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3847_Williams82"/>
      <property name="dataSetTitle" value="LIS Glycine Max (3847_Williams82) data"/>
      <property name="dataSourceName" value="LIS chado database"/>
      <property name="processors" value="org.intermine.bio.dataconversion.GOAnnotationProcessor"/>
    </source>

    <!-- chado featureprop attributes -->
    <source name="chado-featureprop" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3847_Williams82"/>
      <property name="dataSetTitle" value="LIS Glycine max (3847_Williams82) data"/>
      <property name="dataSourceName" value="LIS chado database"/>
      <property name="processors" value="org.intermine.bio.dataconversion.FeaturePropProcessor"/>
    </source>

    <!-- chado gene families and resulting homology - based on featureprop -->
    <source name="chado-genefamilies" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3847_Williams82"/>
      <property name="homologue.organisms" value="3920_IT97K-499-35 3847_Williams82 3880_A17 3885_G19833 130453_V14167 130454_K30076 3827_CDCFrontier 3827_ICC4958 157791_VC1973A 57577_MilvusB 3914_Gyeongwon 3821_ICPL87119 3871_Tanjil 34305_MG20"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS chado database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.GeneFamilyProcessor"/>
    </source>

    <!-- chado gene families and homology - based on phylotree - to pick up Arabidopsis -->
    <source name="chado-homology" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="organisms" value="3847_Williams82"/>
      <property name="homologue.organisms" value="3702_Col0"/>
      <property name="phytozome.version" value="phytozome_10_2"/>
      <property name="dataSetTitle" value="LIS chado data"/>
      <property name="dataSourceName" value="LIS chado database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.HomologyProcessor"/>
    </source>

    <!-- chado + reactome file -->
    <source name="chado-reactome-file" type="legfed-chado-db" dump="true">
      <property name="source.db.name" value="chado"/>
      <property name="reactome.filename" location="/home/shokin/data/plant-reactome/reactome.txt"/>
      <property name="organisms" value="3847_Williams82"/>
      <property name="dataSetTitle" value="Plant Reactome data"/>
      <property name="dataSourceName" value="LIS chado database"/>
      <property name="converter.class" value="org.intermine.bio.dataconversion.ChadoDBConverter"/>
      <property name="processors" value="org.intermine.bio.dataconversion.ReactomeProcessor"/>
    </source>

    <!-- soybean expression -->
    <source name="soybean-expression" type="legfed-expression" dump="true">
      <property name="src.data.dir" location="/home/shokin/data/soybean-expression"/>
    </source>

    <!-- QTL data from tab-delimited file -->
    <source name="qtl-file" type="legfed-qtl-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/data/soybase-qtl"/>
    </source>

    <!-- QTL-ontology relations from tab-delimited file -->
    <source name="qtl-ontology-file" type="legfed-qtl-ontology-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/data/soybase-qtl-ontology"/>
    </source>

    <!-- genetic marker genomic locations and types from tab-delimited file -->
    <source name="marker-chromosome-file" type="legfed-marker-chromosome-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/data/soybase-markers-chromosomes"/>
    </source>

    <!-- linkage groups and genetic maps from tab-delimited file -->
    <source name="linkagegroup-file" type="legfed-linkagegroup-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/data/soybase-linkagegroups"/>
    </source>

    <!-- genetic marker genetic locations on linkage groups from tab-delimited file -->
    <source name="marker-linkagegroup-file" type="legfed-marker-linkagegroup-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/data/soybase-markers-linkagegroups"/>
    </source>

    <!-- genetic marker associations with QTLs from tab-delimited file -->
    <source name="marker-qtl-file" type="legfed-marker-qtl-file" dump="true">
      <property name="src.data.dir" location="/home/shokin/data/soybase-markers-qtls"/>
    </source>
      
    <!-- gene ontology -->
    <source name="go" type="go">
      <property name="src.data.file" location="/home/shokin/data/go-annotation/go.obo"/>
    </source>

    <!-- sequence ontology -->
    <source name="so" type="so">
      <property name="src.data.file" location="../../bio/sources/so/so.obo"/>
    </source>

    <!-- trait ontology -->
    <source name="to" type="trait-ontology">
      <property name="src.data.file" location="/home/shokin/data/plant-trait-ontology/to.obo"/>
      <property name="ontology.prefix" value="TO"/>
    </source>

    <!-- plant ontology -->
    <source name="po" type="plant-ontology">
      <property name="src.data.file" location="/home/shokin/data/plant-ontology/po.obo"/>
      <property name="ontology.prefix" value="PO"/>
    </source>

  </sources>

  <post-processing>

    <!-- source-specific post-processing -->
    <post-process name="do-sources" dump="true"/>

    <!-- legfed -->
    <post-process name="populate-linkagegroup-lengths" dump="true"/>
    <post-process name="populate-qtl-linkagegroups" dump="true"/>
    <post-process name="populate-gene-spanning-qtls" dump="true"/>
    <post-process name="create-protein-gene-references" dump="true"/>
    <post-process name="create-protein-domain-references" dump="true"/>
    <post-process name="populate-interpro-data" dump="true"/>
    <post-process name="create-ontology-parent-annotations" dump="true"/>
 
    <!-- add features -->
    <post-process name="create-intron-features"/>
    <post-process name="create-intergenic-region-features"/>
    <post-process name="create-gene-flanking-features"/> 
   
    <!-- create various references and collections -->
    <post-process name="populate-located-features"/>
    <post-process name="populate-child-features"/>
    <post-process name="create-references" />
    <post-process name="create-chromosome-locations-and-lengths"/>
    <post-process name="transfer-sequences"/>

    <!-- views and indexes, after all data is set -->
    <post-process name="create-location-overlap-index"/>
    <post-process name="create-overlap-view" />
    <post-process name="create-attribute-indexes"/>
    <post-process name="summarise-objectstore"/>
    <post-process name="create-autocomplete-index"/>
    <post-process name="create-search-index"/>

  </post-processing>

</project>
